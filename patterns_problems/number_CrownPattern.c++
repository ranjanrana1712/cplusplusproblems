#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    //to calculate the spaces
    int space = 2*(n-1);
    
    //to print the number of rows
    for(int i=1;i<=n;i++){
        
        //to print the rows before space
        for(int j=1;j<=i;j++){
            cout<<j;
        }
        //to print the space in rows
        for(int j =1;j<=space;j++){
            cout<<" ";
            
        }
        //to print the number after the space
        for(int j=i;j>=1;j--){
            cout<<j;
            
            

        }
        space-=2;
        //cout<<endl;
        cout<<endl;
    }
    return 0;
}

